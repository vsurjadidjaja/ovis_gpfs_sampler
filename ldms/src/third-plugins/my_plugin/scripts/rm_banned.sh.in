#!/bin/bash
#
# delete suspicious .la files
ovis_lib_libdir=@ovis_ldms_libdir@
. $ovis_lib_libdir/ovis-lib-configvars.sh
ovis_ldms_libdir=@ovis_ldms_libdir@
. $ovis_ldms_libdir/ovis-ldms-configvars.sh

# The common case of system libraries will not interfere
# with itself.
case $ovis_lib_libdir,$ovis_ldms_libdir in
/usr/lib,/usr/lib) exit 0
	;;
/usr/lib64,/usr/lib64) exit 0
	;;
esac


sysdirs=`cat << EOF | sort -u
$ovis_lib_libdir
$ovis_ldms_libdir
EOF
`

plugdirs=`cat << EOF | sort -u
$ovis_lib_pkglibdir
$ovis_ldms_pkglibdir
EOF
`

# fixme: these need to be expanded for sos-ldms related bits.
sysblacklist="
libcoll.la
libldms.la
libldms_store_csv_common.la
libparse_stat.la
libplugattr.la
libsampler_base.la
librequest.la
libldmsd_stream.la
libmmalloc.la
libovis_auth.la
libovis_ctrl.la
libovis_event.la
libovis_third.la
libovis_util.la
libzap.la
"

plugblacklist="
libldms_auth_naive.la
libldms_auth_none.la
libldms_auth_ovis.la
liball_example.la
libarray_example.la
libclock.la
libedac.la
libgeneric_sampler.la
libjobid.la
liblnet_stats.la
liblustre2_client.la
liblustre2_mds.la
liblustre2_oss.la
liblustre_sampler.la
libmeminfo.la
libprocdiskstats.la
libprocinterrupts.la
libprocnetdev.la
libprocnfs.la
libprocsensors.la
libprocstat.la
libstore_csv.la
libstore_flatfile.la
libstore_function_csv.la
libstore_rabbitv3.la
libsynthetic.la
libsysclassib.la
libvariable.la
libvmstat.la
libzap_rdma.la
libzap_sock.la
"

badlibs=""
for i in $sysdirs; do
	for f in $sysblacklist; do
		if test -f $i/$f; then
			echo removing $i/$f
			rm $i/$f
		fi
	done
done

badplugs=""
for i in $plugdirs; do
	for f in $plugblacklist; do
		if test -f $i/$f; then
			echo removing $i/$f
			rm $i/$f
		fi
	done
	pushd $i > /dev/null
	cd $i
	for f in *.la ; do
		if test $f = '*.la'; then 
			break;
		else
			echo not banned yet?: $f
		fi
	done
	popd $i >/dev/null
done
